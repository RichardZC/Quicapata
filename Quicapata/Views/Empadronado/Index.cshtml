@model List<Dominio.Empadronado>


<h1>Empadronados (@ViewBag.NroEmpadronados)</h1>
<div class="row mb-4">
    <div class="col-sm-6">
        <form asp-action="Index">
            <input name="pBuscar" class="form-control" placeholder="Buscar por Apellidos luego <ENTER>" />
        </form>
    </div>
    <div class="col-sm-6">
        <div class="text-sm-end mt-2 mt-sm-0">
            <a type="button" href="@Url.Action("Editar","Empadronado", new { id=0  })" class="btn btn-primary">
                <i class="mdi mdi-plus-outline me-1"></i>Nuevo
            </a>
        </div>
    </div>
</div>

<table class="table table-hover table-bordered  mb-0">
    <thead class="table-light">
        <tr>
            <th>DNI</th>
            <th>Titular</th>
            <th>Direccion</th>
            <th>Manzana</th>
            <th>Lote</th>
            <th>Celular</th>
            <th>Conyugue</th>
            <th>Conyugue Celular</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Dni</td>
                <td>@item.NombreCompleto</td>
                <td>@item.Direccion</td>
                <td>@item.Manzana</td>
                <td>@item.Lote</td>
                <td>@item.Celular</td>
                <td>@item.Conyugue</td>
                <td>@item.ConyugueCelular</td>
                <td>
                    <a type="button" href="@Url.Action("Editar","Empadronado", new { id=item.EmpadronadoId  })" class="btn btn-primary btn-sm">Editar</a>
               </td>
            </tr>
        }
    </tbody>
</table>
